<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RuokalistaApp.Pages.LoginPage"
             >
    <VerticalStackLayout Spacing="10"
            Padding="20,20">
        <Label 
            Text="Kirjaudu sisään"
            VerticalOptions="Center" 
            HorizontalOptions="Center" FontSize="30" Padding="0, 10" />

        <Entry Placeholder="Sähköposti" x:Name="SahkopostiEntry" />
        <VerticalStackLayout></VerticalStackLayout>
        <Entry Placeholder="Salasana" IsPassword="True" x:Name="SalasanaEntry"></Entry>
        <VerticalStackLayout></VerticalStackLayout>

        <Button Text="Kirjaudu" Clicked="Button_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>